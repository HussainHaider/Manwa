<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.smdproject.ActivityLayer.editProductActivity">

    <TextView
        android:layout_width="wrap_content"
        android:text="One Item to Edit at One time"
        android:textColor="@color/Red"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/error_txt"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/Productlist"
        android:layout_width="match_parent"
        android:layout_below="@+id/error_txt"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/colorPrimary"
        android:weightSum="6"
        android:layout_alignParentStart="true">
        <Button
            android:id="@+id/btndeleteProduct"
            android:layout_width="0dp"
            android:text="Delete"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:onClick="ProductUpgradition"
            android:layout_weight="3"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnsEditProduct"
            android:layout_width="0dp"
            android:text="Edit"
            android:onClick="ProductUpgradition"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:layout_weight="3"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
