<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hp.smdproject.ActivityLayer.AdminHomeActivity">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:text="Admin Panel"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textColor="@color/theme1"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="adminfuctionality"
        android:id="@+id/deleteuser_btn"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:text="Delete/Suspend User"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/theme1"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="adminfuctionality"
        android:id="@+id/addproduct_btn"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:text="Add Product"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/theme1"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="adminfuctionality"
        android:id="@+id/addproductdetail_btn"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:text="Add Product Detail"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/theme1"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="Enter Category:"
            android:layout_marginLeft="5dp"
            android:id="@+id/textcategory1"
            android:textSize="20sp"
            android:textColor="@color/BackColor"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <Button
        android:onClick="adminfuctionality"
        android:layout_width="wrap_content"
        android:text="GO"
        android:layout_marginTop="7dp"
        android:layout_marginRight="10dp"
        android:id="@+id/go_btn1"
        android:textSize="18dp"
        android:background="@color/specail"
        android:layout_gravity="right"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="adminfuctionality"
        android:id="@+id/editproduct_btn"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:text="Edt Product"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/theme1"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="Enter Category:"
            android:layout_marginLeft="5dp"
            android:id="@+id/textcategory2"
            android:textSize="20sp"
            android:textColor="@color/BackColor"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <Button
        android:onClick="adminfuctionality"
        android:layout_width="wrap_content"
        android:text="GO"
        android:layout_marginTop="7dp"
        android:layout_marginRight="10dp"
        android:id="@+id/go_btn2"
        android:textSize="18dp"
        android:background="@color/specail"
        android:layout_gravity="right"
        android:layout_height="wrap_content" />


</LinearLayout>
